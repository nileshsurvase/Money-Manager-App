{
  "name": "clarityos",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/copy-test-tool.js",
    "build:mobile": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "deploy": "npm run build && netlify deploy --prod --dir=dist",
    "deploy:preview": "npm run build && netlify deploy --dir=dist",
    "cap:add": "npx cap add",
    "cap:sync": "npm run build:mobile && npx cap sync",
    "cap:run": "npm run cap:sync && npx cap run",
    "cap:build": "npm run cap:sync && npx cap build",
    "android:dev": "npm run cap:sync && npx cap run android",
    "android:build": "npm run cap:sync && npx cap build android",
    "android:open": "npx cap open android",
    "update": "git add . && git commit -m \"Quick update\" && git push",
    "update:major": "npm version minor && git add . && git commit -m \"Major update\" && git push",
    "update:patch": "npm version patch && git add . && git commit -m \"Bug fixes\" && git push",
    "version:check": "echo Current version: $(node -p \"require('./package.json').version\")"
  },
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/app": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/filesystem": "^6.0.0",
    "@capacitor/haptics": "^6.0.0",
    "@capacitor/local-notifications": "^6.0.0",
    "@capacitor/push-notifications": "^6.0.0",
    "@capacitor/share": "^6.0.0",
    "@capacitor/splash-screen": "^6.0.0",
    "@capacitor/status-bar": "^6.0.0",
    "@capacitor/toast": "^6.0.0",
    "@google-cloud/local-auth": "^3.0.1",
    "@netlify/functions": "^4.1.15",
    "@supabase/supabase-js": "^2.45.6",
    "axios": "^1.7.9",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.6",
    "exceljs": "^4.4.0",
    "framer-motion": "^12.1.1",
    "googleapis": "^144.0.0",
    "lucide-react": "^0.469.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.5.2",
    "react-is": "^18.3.1",
    "react-router-dom": "^7.1.0",
    "recharts": "^2.15.4"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "@eslint/js": "^9.30.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "netlify-cli": "^22.4.0",
    "pg": "^8.16.3",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
